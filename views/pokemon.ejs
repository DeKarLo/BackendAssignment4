<!-- views/pokemon.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= pokemon.name %> Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="styles.css" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Pokemon Search</a>
            </div>
        </nav>
        <div class="container mt-4">
            <% if (pokemon) { %>
            <div class="card">
                <div class="card-header h1"><%= pokemon.name.toUpperCase() %></div>
                <div class="card-body">
                    <img src="<%= pokemon.imageUrl %>" class="img-fluid" alt="<%= pokemon.name %>" />
                    <p class="mt-3"><strong>Description:</strong> <%= pokemon.description %></p>
                    <% if (pokemon.evolutionChain.length > 0) { %>
                    <p><strong>Evolution Chain:</strong></p>
                    <ul class="list-group">
                        <% pokemon.evolutionChain.forEach(evolution => { %>
                        <li class="list-group-item">
                            <img src="<%= evolution.imageUrl %>" alt="<%= evolution.name %>" width="50" />
                            <%= evolution.name %>
                        </li>
                        <% }); %>
                    </ul>
                    <% } else { %>
                    <p><strong>Evolution Chain:</strong> Not available</p>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>

        <footer class="footer">
            <div class="container">
                <span class="text-muted">Â© 2024 Pokemon Search</span>
            </div>
        </footer>
    </body>
</html>
