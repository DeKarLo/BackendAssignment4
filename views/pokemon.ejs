<!-- views/pokemon.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= pokemon.name %> Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="styles.css" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Pokemon Search</a>
            </div>
        </nav>
        <div class="container mt-4">
            <% if (error) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } else if (pokemon) { %>
            <div class="card">
                <div class="card-header h1"><%= pokemon.name.toUpperCase() %> Details</div>
                <div class="card-body">
                    <img src="<%= pokemon.imageUrl %>" class="img-fluid" alt="<%= pokemon.name %>" />
                    <p class="mt-3"><strong>Description:</strong> <%= pokemon.description %></p>
                    <% if (pokemon.evolutionChain) { %>
                    <p><strong>Evolution Chain:</strong></p>
                    <ul>
                        <% renderEvolutionChain(pokemon.evolutionChain) %>
                    </ul>
                    <% } else { %>
                    <p><strong>Evolution Chain:</strong> Not available</p>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
        <footer class="footer">
            <div class="container">
                <span class="text-muted">Â© 2024 Pokemon Search</span>
            </div>
        </footer>
    </body>
</html>

<% function renderEvolutionChain(chain) { %> <% let current = chain %> <% while (current) { %>
<li><%= current.species.name %></li>
<% if (current.evolves_to.length > 0) { %>
<ul>
    <% current.evolves_to.forEach(evo => { %> <% renderEvolutionChain(evo) %>
    <!-- Recursively render subsequent evolutions -->
    <% }) %>
</ul>
<% } %> <% current = null %>
<!-- Terminate the loop to prevent infinite recursion -->
<% } %> <% } %>
