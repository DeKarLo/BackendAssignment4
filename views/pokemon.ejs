<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= pokemon ? pokemon.name + ' Details' : 'Pokemon Details' %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/style.css" />
        <style></style>
    </head>
    <body>
        <%- include("./partials/navbar") %>
        <div class="container mt-4">
            <% if (error) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } else if (pokemon) { %>
            <div class="card" style="background-image: url('/img/bg.jpg'); background-size: cover; border: 1px solid #000000">
                <div class="card-header h1"><%= pokemon.name.toUpperCase() %></div>
                <div class="card-body">
                    <img src="<%= pokemon.imageUrl %>" class="img-fluid" alt="<%= pokemon.name %>" />
                    <p class="mt-3"><strong>Description:</strong> <%= pokemon.description %></p>
                    <% if (pokemon.evolutionChain) { %>
                    <p><strong>Evolution Chain:</strong></p>
                    <div class="row g-4">
                        <% let groupIndex = 1; %> <% pokemon.evolutionChain.forEach(group => { %>
                        <div class="col" style="align-self: center">
                            <div class="card" style="border: 1px solid #000000">
                                <div class="card-body boba">
                                    <p class="card-text"><strong>Evolution <%= groupIndex %>:</strong></p>
                                    <% group.forEach(evolution => { %>
                                    <a href="/pokemon/<%= evolution.name.toLowerCase() %>">
                                        <div class="evolution-card">
                                            <img src="<%= evolution.imageUrl %>" alt="<%= evolution.name %>" />
                                            <p><%= evolution.name %></p>
                                        </div>
                                    </a>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                        <% groupIndex++; %> <% }) %>
                    </div>
                    <% } else { %>
                    <p><strong>Evolution Chain:</strong> Not available</p>
                    <% } %> <% if (pokemon.cardImages && pokemon.cardImages.length > 0) { %>
                    <p><strong>TCG cards assosiated with <%= pokemon.name %></strong></p>
                    <div id="pokemonCarousel" class="carousel slide mt-5" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% pokemon.cardImages.forEach((imageUrl, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img src="<%= imageUrl %>" class="d-block w-100" alt="Pokemon Card" />
                            </div>
                            <% }) %>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#pokemonCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#pokemonCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
        <%- include("./partials/footer.ejs") %>

        <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    </body>
</html>
